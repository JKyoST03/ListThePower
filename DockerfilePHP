# Dockerfile para Laravel 12 con PHP-FPM

FROM php:8.2-fpm

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    libonig-dev \
    libzip-dev \
    unzip \
    git

# Instalar extensiones PHP necesarias
RUN docker-php-ext-install pdo_mysql mbstring zip exif pcntl

# Instalar Composer (la copia desde el contenedor oficial de Composer)
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Establecer el directorio de trabajo
WORKDIR /var/www

# Copiar los archivos del proyecto
COPY . .

# Instalar las dependencias de Composer
RUN composer install --no-interaction --prefer-dist --optimize-autoloader

# Asignar permisos al usuario www-data para que Laravel pueda escribir en storage y cache
RUN chown -R www-data:www-data /var/www && \
    chmod -R 755 /var/www/storage

# Generar la llave de la aplicación (si aún no existe)
RUN php artisan key:generate

EXPOSE 9000

CMD ["php-fpm"]
